<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_portal_content" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//table[@id='sales_order_table']/thead/tr/th[1]" position="before">
            <t t-if="sale_order.print_image">
                <th class="text-left"></th>
            </t>
        </xpath>
        <xpath expr="//table[@id='sales_order_table']/tbody/t[2]/tr/t[1]/td[1]" position="before">
            <t t-if="sale_order.print_image">
                <td id="image">
                    <img class="media-object" t-if="line.image_small" t-att-src="image_data_uri(line.image_small)" alt="Imagen"/>                    
                </td>
            </t>
        </xpath>
    </template>
</odoo>