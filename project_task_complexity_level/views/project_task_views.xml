<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_form" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="complexity_level_id" 
                       domain="[('project_id', '=', project_id)]"
                       option="{'no_create_edit': False}"
                       context="{'default_project_id': project_id}"/>

                <!-- <field name="milestone_id"
                       domain="[('project_id', '=', project_id)]"
                       option="{'no_create_edit': True}"
                       attrs="{'invisible':[('use_milestones','=', False)]}"
                       context="{'default_project_id': project_id}"/> -->

            </field>
        </field>
    </record>

    <record id="project_task_search" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="complexity_level_id" string="Project Task Complexity Level"/>
            </field>
            <group expand="0">
                <filter string="Project Task Complexity Level" name="complexity_level_id" help="Project Task Complexity Level" context="{'group_by':'complexity_level_id'}"/>
            </group>
        </field>
    </record>
</odoo>
